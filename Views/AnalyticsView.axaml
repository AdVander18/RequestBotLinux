<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RequestBotLinux.AnalyticsView">
	<DockPanel>
		<ComboBox Name="StatusFilterComboBox"
				  DockPanel.Dock="Top"
				  Items="{Binding StatusFilters}"
				  SelectedIndex="0"
				  SelectionChanged="OnStatusFilterChanged"/>

		<TabControl>
			<TabItem Header="Статусы задач">
				<oxy:PlotView Name="StatusPlot" Model="{Binding StatusModel}"/>
			</TabItem>

			<TabItem Header="Кабинеты">
				<DockPanel>
					<ComboBox Name="TimeFilterComboBox"
							  DockPanel.Dock="Top"
							  Items="{Binding TimeFilters}"
							  SelectedIndex="0"
							  SelectionChanged="OnTimeFilterChanged"/>
					<oxy:PlotView Name="CabinetPlot" Model="{Binding CabinetModel}"/>
				</DockPanel>
			</TabItem>
		</TabControl>
	</DockPanel>
</UserControl>
