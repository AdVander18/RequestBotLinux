<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="RequestBotLinux.MainFormInstance">
	<Grid ColumnDefinitions="300,*" Margin="10">
		<Border Grid.Column="0" Background="{DynamicResource PrimaryBackgroundGradient}" CornerRadius="8" Margin="0 0 10 0">
			<StackPanel>
				<TextBlock Text="Пользователи"
                          FontSize="16"
                          Margin="10"
                          Foreground="{DynamicResource TextPrimary}"/>
				<ListBox x:Name="listViewUsers"
						 ScrollViewer.HorizontalScrollBarVisibility="Auto">
					<ListBox.Styles>
						<Style Selector="ListBoxItem">
							<Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
							<Setter Property="Margin" Value="10 5"/>
							<Setter Property="Template">
								<ControlTemplate>
									<Border Background="Transparent">
										<ContentPresenter />
									</Border>
								</ControlTemplate>
							</Setter>
						</Style>
					</ListBox.Styles>
				</ListBox>
			</StackPanel>
		</Border>
		<Grid Grid.Column="1" RowDefinitions="*,Auto">
			<ScrollViewer Grid.Row="0">
				<TextBox x:Name="textBoxMessages"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         FontFamily="Courier New"
                         Foreground="{DynamicResource TextPrimary}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="10"
                         Text="[Пользователь] 12:34: Тестовое сообщение
						     [Вы] 12:35:15 Ответ на сообщение"/>
			</ScrollViewer>
			<Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" Margin="0 10 0 0">
				<TextBox x:Name="tbSendMessage"
                         Grid.Column="0"
                         Watermark="Введите сообщение..."
                         AcceptsReturn="True"/>

				<Button Grid.Column="1"
                        Content="Отправить"
                        Margin="10 0"/>

				<Button Grid.Column="2"
                        Content="Удалить"
                        Background="#FF4444"
                        Foreground="White"/>
			</Grid>
		</Grid>
	</Grid>
</UserControl>
